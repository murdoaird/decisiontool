<div id="decision-elements-<%= element.id %>" class="modal" style="width: auto;display: none;">
	<div class="modal-header">
    	<a class="close" data-dismiss="modal">&#215;</a>
    	<h3>View Elements</h3>
  	</div>
	<div class="modal-body">
		<table class="table table-condensed">
		    <thead>
		    <tr>
		      <th>Element</th>
		      <th>Description</th>
		      <th></th>
		      <th></th>
		    </tr>
		    </thead>
		    <tbody>
		    <% element.elements.each do |element| %>
		        <tr>
		          <td><%= element.name %></td>
		          <td><%= element.description %></td>
		          <td><%= link_to( (image_tag("edit-icon.png", :style => 'width:16px;height:16px', :title => 'Edit')), edit_element_path(element), :class => 'btn btn-mini') %></td>
		          <td><%= link_to( (image_tag("bin.png", :style => 'width:16px;height:16px', :title => 'Delete')), element_path(element), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') %></td>
		        </tr>
		    <% end %>
		    <tr>
		      <td colspan="4"><a href="elements/new" class="btn btn-mini" type="button">Add Element</a></td>
		    </tr>
		    
		    
		    </tbody>
		</table>
      </div>
      <div class="modal-footer">
        <a class="btn" data-dismiss="modal" href="#">Close</a>
      </div>
</div>

<h1>Listing elements</h1>

<table cellpadding="10" >
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @elements.each do |element| %>
  <tr>
    <td><%= element.name %></td>
    <td><%= element.description %></td>
    <td><%= link_to 'Show', element %>&nbsp;&nbsp;&nbsp;</td>
    <td><%= link_to 'Edit', edit_element_path(element) %>&nbsp;&nbsp;&nbsp;</td>
    <td><%= link_to 'Delete', element, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


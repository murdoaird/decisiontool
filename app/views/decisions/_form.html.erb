<%= simple_form_for(@decision) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :title %>

    <%= f.input :description, :input_html => {:style=> 'cols: 75'} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
